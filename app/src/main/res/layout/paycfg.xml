<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#cccccc"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="150dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPayRoleId"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="roleid:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextPayRoleId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="AAA"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPayGrade"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="grade:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextPayGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="BBB"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPayRoleName"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="rolename:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextPayRoleName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="CCC"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPayServerId"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="serverid:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextPayServerId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="0"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPayCustomInfo"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="custominfo:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextPayCustomInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="DDD"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPayOrderId"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="orderId:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextPayOrderId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="productName:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextPayProdName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="EEE"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewAmount"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:text="固定金额:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:inputType="numberDecimal"
                    android:text="2.33"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPayNotifyUrl"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="回调url:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextNotifyUrl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="http://pay.uctest2.ucweb.com:8039/result.jsp"
                    android:textColor="#000000"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textViewPayAccountId"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="accountId:"
                    android:textColor="#000000" />

                <EditText
                    android:id="@+id/editTextAccountId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:visibility="gone"></EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBoxPayContinueCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="连续充值"
                    android:textColor="#000000"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonCharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="充值"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/buttonReset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="重置"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <CheckBox
                    android:id="@+id/checkboxNeedSign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送签名"
                    android:textColor="#000000"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-150dip">

        <TextView
            android:id="@+id/textViewPayOutputs"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.75"
            android:gravity="left"
            android:inputType="none"></TextView>
    </ScrollView>

</LinearLayout>